{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
  ],
  prHourlyLimit: 3,
  enabledManagers: [
    'helm-values',
    'kubernetes',
    'kustomize',
    'argocd',
    'docker',
  ],
  argocd: {
    fileMatch: [
      '^infra/.+\\.yaml$',
      '^apps/.+\\.yaml$',
      '^my-apps/.+\\.yaml$',
    ],
  },
  kubernetes: {
    fileMatch: [
      '^infra/.+\\.yaml$',
      '^apps/.+\\.yaml$',
      '^my-apps/.+\\.yaml$',
    ],
  },
  docker: {
    enabled: true,
    fileMatch: [
      '(^|/)deployment\\.yaml$',
      '(^|/)statefulset\\.yaml$',
      '(^|/)daemonset\\.yaml$',
      '(^|/)cronjob\\.yaml$',
      '(^|/)job\\.yaml$',
      '(^|/)pod\\.yaml$'
    ]
  },
  'helm-values': {
    fileMatch: [
      '^infra/.+/values\\.yaml$',
      '^apps/.+/values\\.yaml$',
    ],
  },
  kustomize: {
    fileMatch: [
      '(^|/)kustomization\\.ya?ml$',
    ],
  },
  packageRules: [
    {
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      matchManagers: [
        'helm-values',
        'kubernetes',
        'kustomize',
        'argocd',
        'docker',
      ],
      automerge: true,
      automergeType: 'branch',
    },
    {
      matchUpdateTypes: [
        'major',
      ],
      matchManagers: [
        'helm-values',
        'kubernetes',
        'kustomize',
        'argocd',
        'docker',
      ],
      automerge: false,
      prCreation: 'immediate',
    },
    {
      matchDatasources: ["docker"],
      matchUpdateTypes: ["digest"],
      enabled: true
    }
  ],
  ignorePaths: [
    '**/charts/**',
  ],
}
